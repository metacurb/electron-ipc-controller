{
  "name": "@electron-ipc-bridge/core",
  "version": "0.1.1",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metacurb/electron-ipc-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/metacurb/electron-ipc-bridge/issues"
  },
  "homepage": "https://metacurb.github.io/electron-ipc-bridge/",
  "description": "A class-based IPC abstraction for Electron applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./preload": {
      "types": "./dist/preload/index.d.ts",
      "import": "./dist/preload/index.mjs",
      "require": "./dist/preload/index.js"
    },
    "./preload.js": "./dist/preload/preload.entry.js"
  },
  "typesVersions": {
    "*": {
      "preload": [
        "./dist/preload/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node scripts/build.mjs",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "electron": ">=28.0.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@electron-ipc-bridge/shared": "workspace:*",
    "electron": "^40.6.1",
    "esbuild": "^0.27.3"
  }
}
