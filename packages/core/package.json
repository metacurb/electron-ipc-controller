{
  "name": "@electron-ipc-controller/core",
  "version": "0.1.0",
  "description": "A class-based IPC abstraction for Electron applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./preload": {
      "types": "./dist/preload/index.d.ts",
      "import": "./dist/preload/index.mjs",
      "require": "./dist/preload/index.js"
    },
    "./preload.js": "./dist/preload/preload.entry.js"
  },
  "typesVersions": {
    "*": {
      "preload": [
        "./dist/preload/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node scripts/build.mjs",
    "postinstall": "pnpm build",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "electron": ">=28.0.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@electron-ipc-controller/shared": "workspace:*",
    "electron": "^40.2.1",
    "esbuild": "^0.27.3"
  }
}
